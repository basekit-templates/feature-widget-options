<!-- Feature Options -->
<div class="acc-container">

	<div class="acc-btn">
		<h2 class="selected">Site</h2>
	</div>
	<div class="acc-content">
		<div class="acc-content-inner">
			<div class="site-options">
				<h4>Site Layout</h4>
				<select class="site-layout">
					<option value="site-layout--full" selected="selected">Full</option>
					<option value="site-layout--contained">Contained</option>
				</select>

				<h4>Site Position (?)</h4>
				<select class="site-position">
					<option value="site-position--center" selected="selected">Center</option>
					<option value="site-position--left">Left</option>
					<option value="site-position--right">Right</option>
				</select>
			</div>
		</div>
	</div>

	<div class="acc-btn">
		<h2>Header</h2>
	</div>
	<div class="acc-content">
		<div class="acc-content-inner">
			<div class="header-options">
				<h4>Header Layout</h4>
				<select class="header-layout">
					<option value="header-layout--left" selected="selected">Left</option>
					<option value="header-layout--right">Right</option>
					<option value="header-layout--center">Center</option>
				</select>

				<h4>Header Position</h4>
				<select class="header-position">
					<option value="header-position--standard" selected="selected">Standard</option>
					<option value="header-position--overlap">Overlap</option>
				</select>

				<h4>Header Spacing</h4>
				<select class="header-spacing">
					<option value="header-spacing--small" selected="selected">Small</option>
					<option value="header-spacing--medium">Medium</option>
					<option value="header-spacing--large">Large</option>
				</select>
			</div>
		</div>
	</div>

	<div class="acc-btn  last">
		<h2>Feature</h2>
	</div>
	<div class="acc-content">
		<div class="acc-content-inner">
			<h4>Height</h4>
			<select class="feature-height">
				<option value="feature-height--fullscreen">Fullscreen</option>
				<option value="feature-height--medium" selected="selected">Medium</option>
				<option value="feature-height--small">Small</option>
			</select>

			<h4>Alignment</h4>
			<select class="feature-alignment">
				<option value="feature-alignment--top--left">Top Left</option>
				<option value="feature-alignment--top--right">Top Right</option>
				<option value="feature-alignment--top--center">Top Center</option>
				<option value="feature-alignment--middle--left">Middle Left</option>
				<option value="feature-alignment--middle--right">Middle Right</option>
				<option value="feature-alignment--middle--center" selected="selected">Middle Center</option>
				<option value="feature-alignment--bottom--left">Bottom Left</option>
				<option value="feature-alignment--bottom--right">Bottom Right</option>
				<option value="feature-alignment--bottom--center">Bottom Center</option>
			</select>

			<h4>Parallax</h4>
			<select class="feature-parallax">
				<option value="feature-parallax--on" selected="selected">On</option>
				<option value="feature-parallax--off">Off</option>
			</select>

			<h4>Overlay Type</h4>
			<select class="feature-overlay-type">
				<option value="feature-overlay-type--full">Full</option>
				<option value="feature-overlay-type--typography" selected="selected">Typography</option>
			</select>

			<h4>Overlay Opacity</h4>
			<select class="feature-overlay-opacity">
				<option value="feature-overlay-opacity--100">100%</option>
				<option value="feature-overlay-opacity--75">75%</option>
				<option value="feature-overlay-opacity--50" selected="selected">50%</option>
				<option value="feature-overlay-opacity--25">25%</option>
				<option value="feature-overlay-opacity--10">10%</option>
				<option value="feature-overlay-opacity--0">0</option>
			</select>
		</div>
	</div>

	<div class="acc-btn  last">
		<h2>Main</h2>
	</div>
	<div class="acc-content">
		<div class="acc-content-inner">
			<h4>Main Spacing</h4>
			<select class="main-spacing">
				<option value="main-x-spacing--large">Large</option>
				<option value="main-x-spacing--medium" selected="selected">Medium</option>
				<option value="main-x-spacing--small">Small</option>
			</select>
		</div>
	</div>

</div>
